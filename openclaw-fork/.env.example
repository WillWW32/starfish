# Starfish Agent Configuration

# Server
PORT=3000
HOST=0.0.0.0

# API Security (optional - leave empty for no auth)
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here

# LLM Providers
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# BlueBubbles iMessage Integration
BLUEBUBBLES_URL=http://localhost:1234
BLUEBUBBLES_TOKEN=your-bluebubbles-token

# Email - SendGrid (recommended)
SENDGRID_API_KEY=SG.xxx
EMAIL_FROM=noreply@yourdomain.com

# Email - SMTP (alternative)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Twitter/X API (legacy - prefer Typefully)
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx
TWITTER_ACCESS_TOKEN=xxx
TWITTER_ACCESS_SECRET=xxx

# Typefully - X/Twitter posting (RECOMMENDED)
TYPEFULLY_API_KEY=your-typefully-api-key

# Publer - Multi-platform social posting (RECOMMENDED)
PUBLER_API_KEY=your-publer-api-key
PUBLER_WORKSPACE_ID=your-workspace-id

# Reddit Browser Automation
REDDIT_HEADLESS=false

# Browser Automation
BROWSER_HEADLESS=true

# Paths
CONFIG_PATH=./config.json
SKILLS_PATH=./skills
AGENTS_PATH=./agents
DATA_PATH=./data
